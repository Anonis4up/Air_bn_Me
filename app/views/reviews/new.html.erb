<div class="container">

<h1 class=text-dark> Laisse ton avis sur: <Strong> <%= @bike.brand %> </Strong> proposé par <%= @bike.user.first_name %>
</h1>

<img src="<%= @bike.poster_url %>", alt= "un wagon", width=300px class="card-img-top" alt="Image" style="width: 40%; height: auto;">

<%= form_for([@bike, @review]) do |f| %>

  <div class="form-group ">
    <%= f.label :comment, "Votre avis", class: 'fs-3 form-label text-dark' %>
    <%= f.text_area :comment, class: ' fs-3 bg-light form-control', rows: 4 %>
  </div>

  <div class="form-group">
    <%= f.label :rating, "Évaluation (0-5)", class: 'fs-3 form-label text-dark' %>
    <%= f.select :rating, [0, 1, 2, 3, 4, 5], {}, class: 'fs-3 form-control text-dark' %>
  </div>

  <div class="form-group">
    <%= f.submit "Soumettre l'avis", class: "btn btn-ghost mx-5 my-5" %>
  </div>
<% end %>
</div>
